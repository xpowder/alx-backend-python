#!/bin/bash
# Script to start a local Kubernetes cluster with Minikube and verify it is running.

set -e  # Exit on error

echo "=== Checking if Minikube is installed ==="
if ! command -v minikube &> /dev/null; then
    echo "Minikube is not installed. Please install it first."
    echo "Linux install guide: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "=== Starting Minikube cluster ==="
minikube start

echo "=== Verifying Kubernetes cluster status ==="
kubectl cluster-info

echo "=== Listing all pods in all namespaces ==="
kubectl get pods --all-namespaces
